[user]
    email = {{ user.git_repositories[0].email | default('user@example.com') }}
    name = {{ user.git_repositories[0].name | default('User Name') }}

{% for repo in user.git_repositories | default([]) %}
{% if not loop.first and repo.status | default(true) %}
[includeIf "gitdir:~/repo_{{ repo.name }}/"]
    path = ~/.config/git/config-{{ repo.name }}

{% endif %}
{% endfor %}

[core]
    editor = vim
    autocrlf = input
    pager = less
    tabwidth = 4

[push]
    default = simple

[pull]
    rebase = true

[color]
    ui = auto

[alias]
    # Status
    st = status
    s = status -s
    
    # Add
    a = add
    aa = add --all
    
    # Commit
    c = commit
    cm = commit -m
    ca = commit --amend
    amend = commit --amend --no-edit
    
    # Branch
    b = branch
    ba = branch -a
    bd = branch -d
    bdd = branch -D
    br = branch -r
    current = rev-parse --abbrev-ref HEAD
    
    # Checkout
    co = checkout
    
    # Push/Pull
    p = push
    pullr = pull --rebase
    
    # Log
    lg = log --oneline --graph
    ll = log --oneline
    last = log -1 HEAD
    
    # Reset
    unstage = reset HEAD --
    uncommit = reset --soft HEAD~1
    
    # Stash
    sl = stash list
    sa = stash apply
    sp = stash pop